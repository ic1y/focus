<h1>Welcome back, {{username}}</h1>
<span id="time">&nbsp;</span>
<button id="start">Start a focus</button>
<button id="end">End the focus</button>
<h2>To do:</h2>
<label for="addToDo">Add to-do:</label> 
<div id="inputRow">
	<input type="text" id="addToDo">
	<button id="enterToDo">
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" title="Enter">
			<path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
		</svg>	
	</button>
</div>
<div id="toDoList">
	{{{toDos}}}
</div>
<h2>Achievements:</h2>
<div id="acvm">
	{{{getAchievements focusData}}}
</div>
{{#if focusData}}
<h2 id="total">Total focus time: {{totalTime}}</h2>
<ul>
	{{#each focusData}}
			<li>
				{{showTime this}}					
			</li>
	{{/each}}
</ul>
{{/if}}
<button id="logOut">Log out of account</button>
<button id="delete">Delete account and data</button>
<script src="/static/app.js"></script>